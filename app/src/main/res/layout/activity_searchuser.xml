<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.SearchUserActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundTolbar">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleTolbar"
                    android:layout_gravity="center"
                    android:textSize="@dimen/toolbarTitleTextSize"
                    android:text="GitHub View"
                    android:gravity="center"/>

        </android.support.v7.widget.Toolbar>

        <EditText
                android:id="@+id/EditUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/SearchEditTop"
                android:layout_marginLeft="@dimen/searchEditLD"
                android:layout_marginBottom="@dimen/searchEditLD"

        />
        <Button
                android:id="@+id/buttoSearch"
                android:layout_width="@dimen/buttonSearchWidth"
                android:layout_height="@dimen/buttonSearchHeigth"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/buttonSearchTopMargin"
                android:text="Search"
                android:textSize="@dimen/buttonSearchTextSize"
                android:background="@color/buttonSearchBackground"
                android:textColor="@color/buttonSearchText"
        />
    </LinearLayout>

    <FrameLayout
            android:id="@+id/fragmentLoading_Id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
        />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>

